#!/usr/bin/env bash
# install nginx and configure to listen port 80 and server basic html page
sudo apt-get -y update
sudo apt-get install -y nginx nginx-full nginx-common
sudo ufw allow 'Nginx HTTP'
sudo chgrp -R ubuntu /usr/share/nginx/html
sudo chmod -R g+w /usr/share/nginx/html
echo "Holberton School for the win!" | sudo tee /usr/share/nginx/html/index.html
sudo service nginx start
