#!/usr/bin/env bash
# Installing nginx on server

sudo apt-get -y update
sudo apt-get -y install nginx
# Firewall port 80
sudo ufw allow 'Nginx HTTP'
# Fix permission problems on folder, grant access to ubuntu group Ubuntu 14.04
sudo chgrp -R ubuntu /usr/share/nginx/html
sudo chmod -R g+w /usr/share/nginx/html
sudo chgrp -R ubuntu /var/www/html
sudo chmod -R g+w /var/www/html
# Index file and start
sudo sed -i 's/\/usr\/share\/nginx\/html/\/var\/www\/html/g' /etc/nginx/sites-available/default
sudo sed -i 's/ ipv6only=on//g' /etc/nginx/sites-available/default
sudo mkdir -p /var/www/html
sudo echo 'Holberton School' | sudo tee /var/www/html/index.html
sudo service nginx start
